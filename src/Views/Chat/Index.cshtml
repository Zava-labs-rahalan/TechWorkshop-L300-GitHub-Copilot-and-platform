@model ZavaStorefront.Models.ChatViewModel
@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-4">
    <h1 class="mb-4">Chat with Zava Assistant</h1>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div id="chat-messages" style="height: 400px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 4px; padding: 15px; margin-bottom: 15px; background-color: #f8f9fa;">
                        @if (!Model.Messages.Any())
                        {
                            <p class="text-muted text-center mt-5">Start a conversation by typing a message below.</p>
                        }
                        else
                        {
                            @foreach (var message in Model.Messages)
                            {
                                if (message.Role == "user")
                                {
                                    <div class="d-flex justify-content-end mb-3">
                                        <div class="bg-primary text-white rounded p-2 px-3" style="max-width: 75%;">
                                            @message.Content
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex justify-content-start mb-3">
                                        <div class="bg-white border rounded p-2 px-3" style="max-width: 75%;">
                                            @message.Content
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>

                    <form asp-action="SendMessage" method="post">
                        <div class="input-group">
                            <input type="text" name="userMessage" class="form-control" placeholder="Type your message..."
                                   autofocus autocomplete="off" />
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Send
                            </button>
                        </div>
                    </form>

                    @if (Model.Messages.Any())
                    {
                        <form asp-action="Clear" method="post" class="mt-2">
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-trash"></i> Clear Chat
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var chatMessages = document.getElementById('chat-messages');
        if (chatMessages) {
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    </script>
}
